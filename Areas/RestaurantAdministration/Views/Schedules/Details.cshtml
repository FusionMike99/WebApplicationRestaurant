@model WebApplicationRestaurant.Models.Schedule

@{
    ViewData["Title"] = "Подробиці";
}

<h1>Подробиці</h1>

<div>
    <h4>Графік роботи</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WorkingDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WorkingDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Name) @Html.DisplayFor(model => model.User.Surname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Places)
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var item in Model.Places)
                {
                    <li>@Html.DisplayFor(modelItem => item.Number)</li>
                }
            </ul>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Змінити</a> |
    <a asp-action="Index">Повернутися до списку</a>
</div>
