@model IEnumerable<WebApplicationRestaurant.Models.Order>

@{
    ViewData["Title"] = "Список";
}

<h1>Список</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Place)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Place.Number)
            </td>
            <td>
                @if (item.StatusId.Equals(1))
                {
                <form asp-action="CloseOrder">
                    <input type="hidden" name="id" value="@item.Id" />
                    <input type="submit" value="Закрити замовлення" class="btn btn-danger" />
                </form>
                <br />
                }
                <div>
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id">Подробиці</a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
