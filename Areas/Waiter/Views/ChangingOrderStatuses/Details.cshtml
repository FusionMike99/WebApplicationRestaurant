@model WebApplicationRestaurant.Models.Order

@{
    ViewData["Title"] = "Подробиці";
}

<h1>Подробиці</h1>

<div>
    <h4>Замовлення</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreateTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreateTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FinishTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FinishTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Amount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Place)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Place.Number)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Name) @Html.DisplayFor(model => model.User.Surname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ShoppingCart)
        </dt>
        <dd class="col-sm-10">
            @foreach (var item in Model.ShoppingCart)
            {
            <div>
                @Html.DisplayFor(modelItem => item.Dish.Name) : 
                @Html.DisplayFor(modelItem => item.Count) &#8212; 
                @Html.DisplayFor(modelItem => item.DishStatus.Name)
            </div>
            }
        </dd>
    </dl>
</div>
<div>
    @if (Model.StatusId.Equals(1))
    {
    <div>
        <a class="btn btn-sm btn-danger" asp-action="CloseOrder" asp-route-id="@Model.Id">Закрити замовлення</a>
    </div>
    }
    <a asp-action="Index">Повернутися до списку</a>
</div>
