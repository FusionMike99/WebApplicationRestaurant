@using Microsoft.AspNetCore.Identity
@model WebApplicationRestaurant.Areas.Administration.ViewModels.ChangeRoleViewModel

@{
    ViewBag.Title = "Зміна ролей для користувача";
}

<h2>Зміна ролей для користувача @Model.UserEmail</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <input type="hidden" name="userId" value="@Model.UserId" />
            <div class="form-group">
                @foreach (IdentityRole role in Model.AllRoles)
                {
                    <input type="checkbox" name="roles" value="@role.Name"
                           @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />@role.Name <br />
                    }
            </div>
            <button type="submit" class="btn btn-primary">Зберегти</button>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index" asp-controller="Users">Повернутися до списку</a>
</div>