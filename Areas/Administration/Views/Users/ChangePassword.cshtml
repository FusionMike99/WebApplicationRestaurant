@model WebApplicationRestaurant.Areas.Administration.ViewModels.ChangePasswordViewModel
@{
    ViewBag.Title = "Зміна пароля";
}
<h2>Зміна пароля для користувача @Model.Email</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangePassword" asp-controller="Users">
            <div asp-validation-summary="All" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Email" />
            <div class="form-group">
                <label asp-for="OldPassword" class="control-label">Старий пароль</label>
                <input type="password" asp-for="OldPassword" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="NewPassword" class="control-label">Новий пароль</label>
                <input type="password" asp-for="NewPassword" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>